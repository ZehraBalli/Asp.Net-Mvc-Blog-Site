@model WebApplication15.Models.Model.Blog
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategori Düzenle</h2>
@* burda resim düzenleme işlemini yaptım. *@
<div class="form">
    <form class="form-validate form-horizontal" id="feedback_form" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken();
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Başlık <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="cname" name="Baslik" minlength="5" type="text" required value="@Model.Baslik"/>
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Kategori <span class="required">*</span></label>
            <div class="col-lg-10">
                @Html.DropDownList("KategoriID", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">İcerik</label>
            <div class="col-lg-10">
                <textarea class="ckeditor" name="Icerik">@Model.İcerik</textarea>
            </div>
        </div>
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">ÖncekiResim <span class="required">*</span></label>
            <div class="col-lg-10">
                <img src="@Model.ResimURL" width="150" height="100" />
            </div>
        </div>
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Resim <span >*</span></label>
            <div class="col-lg-10">
                <input class="form-control" name="ResimURL" type="file" accept=".jpg,.png,.jpeg" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Ekle</button>
                <button class="btn btn-default" type="button"><a href="/Blog/Index">İptal</a></button>
            </div>
        </div>
    </form>
</div>

