@model WebApplication15.Models.Model.Blog
@{
    ViewBag.Title = "BlogDetay";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

    <section id="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    
                    
                        <article>
